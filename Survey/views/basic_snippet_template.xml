<odoo>
  <template id="survey_snippet" name="Interactive Survey Snippet">
    <section class="s_survey_snippet o_colored_level" data-sel-survey-id="0">
      <div class="container py-5">
        <div class="row justify-content-center">
          <div class="col-12 col-md-10 col-lg-8">
            <div class="survey-content text-center border rounded shadow-sm p-4 bg-white">
              <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <p class="text-muted">Loading survey, please wait...</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </template>
</odoo>
